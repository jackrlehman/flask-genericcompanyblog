{% extends "base.html.j2" %}
{% block content %}
    <script>
        $(document).ready(function () {
        $(".nav a").removeClass("nav-link active");
        $(".nav a").addClass("nav-link");
        $('#register').addClass("nav-link active");
        });
    </script>
    <form class="form-group" method="POST" style="padding:20px 0px;">
        {{form.hidden_tag()}}

        <div class="form-group">
            {{form.email.label(class="form-control-label")}}
            {{form.email(class="form-control form-control")}}
        </div>

        <div class="form-group">
            {{form.username.label(class="form-control-label")}}
            {{form.username(class="form-control form-control")}}
        </div>

        <div class="form-group">
            {{form.password.label(class="form-control-label")}}
            {{form.password(class="form-control form-control")}}
        </div>

        <div class="form-group">
            {{form.pass_confirm.label(class="form-control-label")}}
            {{form.pass_confirm(class="form-control form-control")}}
        </div>

        <div class="form-group">
            {{form.submit(class="btn btn-primary")}}
        </div>
        
        
        
    </form>
{% endblock content %}  